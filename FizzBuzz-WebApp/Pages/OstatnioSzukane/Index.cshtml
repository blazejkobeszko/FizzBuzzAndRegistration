@model FizzBuzz_WebApp.Pages.OstatnioSzukane.IndexModel

@{
    ViewData["Title"] = "Index";
}
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<h1>Index</h1>

<!--<p>
    <a asp-page="Create">Create New</a>
</p>-->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Main[0].Liczba)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Main[0].Wynik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Main[0].Data)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Main)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Liczba)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Wynik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                @if (item.uzytkownik == UserManager.GetUserName(User))
                {   <td>
                        <!--<a asp-page="./Edit" asp-route-id="@item.Id">Edit</a>--> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
